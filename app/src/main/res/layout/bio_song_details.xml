<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@mipmap/bg4" android:id="@+id/root_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/song_detail_album_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/song_detail_album_image"
                    android:background="@drawable/gradient_bio"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/musicplayer_yellow" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="17dp"
                            android:id="@+id/song_detail_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="By "
                                android:textColor="@color/white"
                                android:textSize="13dp" />
                            <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/song_detail_artist"
                            android:textColor="@color/yellow"
                            android:textSize="13dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" - "
                                android:textColor="@color/yellow"
                                android:textSize="13dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/song_detail_album_name"
                                android:textColor="@color/yellow"
                                android:textSize="13dp" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <LinearLayout
                    android:background="@drawable/circle_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:id="@+id/shortbio_yellow"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/equalizer_yellow" />
                </LinearLayout>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@+id/shortbio_yellow"
                    android:id="@+id/bio_desc"
                    android:textSize="17sp"
                    android:text="Lyrics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginBottom="20dp"
                    android:layout_below="@id/bio_desc"
                    android:id="@+id/song_detail_lyrics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/shortbio_yellow"
                    android:textColor="@color/gray" />
            </RelativeLayout>

        </LinearLayout>



</ScrollView>