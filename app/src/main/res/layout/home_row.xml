<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_layout"
    android:paddingLeft="12dp"
    android:paddingTop="12dp">

    <com.tidalsolutions.magic89_9.ImageViewRounded
        android:id="@+id/activity_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="12dp"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:src="@mipmap/ariana" />

    <TextView
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:id="@+id/activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@+id/activity_image"
        android:text="title"
        android:textColor="@color/yellow" />

    <TextView
        android:layout_marginTop="5dp"
        android:textColor="@color/gray"
        android:id="@+id/activity_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_title"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@+id/activity_image"
        android:text="detail" />

    <LinearLayout
        android:layout_marginRight="12dp"
        android:layout_below="@+id/activity_detail"
        android:layout_toRightOf="@+id/activity_image"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnLike"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="12dp"
                android:src="@mipmap/icn512_like_white" />

            <TextView
                android:id="@+id/activity_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_detail"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:text="4 likes"
                android:textColor="@color/gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnShare"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="12dp"
                android:src="@mipmap/icn512_share_white" />

            <TextView
                android:id="@+id/activity_shares"
                android:text="Share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_detail"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/gray" />

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>